{
    "name": "hsyir/categorize",
    "description": "Laravel categorize package",
    "license": "MIT",
    "authors": [
        {
            "name": "Hossein",
            "email": "hosseinyaghmaee@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "cviebrock/eloquent-sluggable": "^8.0",
        "kalnoy/nestedset": "^6.0",
        "spatie/laravel-translatable": "^4.6"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hsy\\Categorize\\ServiceProvider"
            ],
            "aliases": {
                "Options": "Hsy\\Categorize\\Facades\\Categorize"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Hsy\\Categorize\\": "src/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^6.3",
        "laravel/legacy-factories": "^1.0.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Hsy\\Categorize\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "php vendor/phpunit/phpunit/phpunit"
    }
}
